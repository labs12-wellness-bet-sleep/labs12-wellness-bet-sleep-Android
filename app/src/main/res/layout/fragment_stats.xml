<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/softerViolet"
    android:layout_height="match_parent"
    tools:context=".fragmentsNav.StatsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_graph_me"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@+id/me"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardCornerRadius="5dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/group_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/cardView_graph_me"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_graph_group"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@+id/group_textView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardCornerRadius="5dp"


        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />




    </android.support.v7.widget.CardView>


</RelativeLayout>